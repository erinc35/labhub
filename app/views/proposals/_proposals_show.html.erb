<section id="proposals" class="proposals-div">
  <ul id="proposals-list" class="proposal-list">
    <% @proposals.each do |proposal| %>
      <li class="proposals-list-item">
        <article id="proposal-<%= proposal.id %>" class="proposal">
           <div class="proposal-details">
             <h1 class="proposal-title">
               <a href="/proposals/<%= proposal.id %>"><%= proposal.title%></a>
             </h1>
             <p class="proposal-detail-line">Proposed by: <%= proposal.author%></p>
           </div>
        </article>
      </li>
    <% end %>
  </ul>
</section>
