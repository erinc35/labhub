<div class="signup-form">
<h1>Log in</h1>

<%= form_for :session, url: sessions_path do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password_hash %>
  </p>

  <p>
    <%= f.submit value="Log In", class: "signup-button" %>
  </p>
<% end %>
</div>
