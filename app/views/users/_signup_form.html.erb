 <div class="signup-form">
    <%= form_for @user do |f| %>
    <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </p>

    <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </p>

    <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email, class: "signup-email" %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password_hash %>
    </p>

    <p>
      <%= f.submit value="Register", class: "signup-button" %>
    </p>
  <% end %>
</div>
