
<div id="comment-to-prop-form" class="form">
	<h1>Add a new comment</h1>
	<% if @proposal %>
		<%= form_for(@comment, url: proposal_comments_path(@proposal)) do |f| %>
		  <p>
		  <%= f.text_area :body, placeholder: "Add your comment here", class: "comment-form-text" %></p>

		 	<p><%= f.submit value="Add Comment", class: "comment-submit-button" %></p>

		<% end %>
	<%end%>

	<% if @experiment %>
		<%= form_for(@comment, url: experiment_comments_path(@experiment)) do |f| %>
		  <p>
		  	<%= f.label :body %>
		  	<%= f.text_area :body %>
		  </p>

		  <p>
		    <%= f.submit %>
		  </p>
		<% end %>
	<%end%>

	<% if @component %>
		<%= form_for(@comment, url: component_comments_path(@component)) do |f| %>
		  <p>
		  	<%= f.label :body %>
		  	<%= f.text_area :body %>
		  </p>

		  <p>
		    <%= f.submit %>
		  </p>
		<% end %>
	<%end%>
</div>
